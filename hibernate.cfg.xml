<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
    	
    	<!-- JDBC Database connection settings -->
   		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
   		<property name="connection.url">jdbc:mysql://localhost:3306/dbfacebookapp?useSSL=false</property>
   		<property name="connection.username">root</property>
   		<property name="connection.password"></property>
   		
   		<!-- JDBC connection pool settings ... using built-in test tool -->
   		<property name="connection.pool_size">3</property>
   		
   		<!-- Select our SQL dialect -->
   		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
   		
   		<!-- Echo the SQL to stdout -->
   		<property name="show_sql">true</property>
   		
   		<!-- Set the current session context -->
   		<property name="current_session_context_classs">thread</property>
   		
   		<!-- Drop and re-create the database schema on startup -->
   		<property name="hbm2ddl.auto">update</property>
   		
   		<mapping class="com.app.facebook.model.User" />
   		
   		
    </session-factory>
</hibernate-configuration>